<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.AddBookController"
      prefWidth="400" prefHeight="300">

    <Label text="KİTAP EKLE"/>

    <TextField fx:id="titleField" promptText="Kitap Adı"/>
    <TextField fx:id="authorField" promptText="Yazar"/>
    <TextField fx:id="categoryField" promptText="Kategori"/>
    <TextField fx:id="quantityField" promptText="Stok Miktari"/>

    <Button text="Kaydet" onAction="#handleSave"/>
    <Label fx:id="messageLabel"/>

</VBox>
