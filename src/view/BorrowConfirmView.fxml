<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.BorrowConfirmController">

    <Label fx:id="bookTitleLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <DatePicker fx:id="dueDatePicker" promptText="İade Tarihi Seç"/>

    <HBox spacing="10">
        <Button text="Onayla" onAction="#confirmBorrow"/>
        <Button text="İptal" onAction="#cancel"/>
    </HBox>

</VBox>
